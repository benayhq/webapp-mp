<block>
    <view class="submit-order">
        <at-message __triggerObserer="{{ _triggerObserer }}"></at-message>
        <at-toast isOpened="{{isOpended}}" __triggerObserer="{{ _triggerObserer }}"
        text="{{text}}" duration="{{1000}}"></at-toast>
        <at-list __triggerObserer="{{ _triggerObserer }}">
            <at-list-item hasBorder="{{false}}" __triggerObserer="{{ _triggerObserer }}"
            bindonclick="handleItemClick" title="{{anonymousState__temp}}" note="{{anonymousState__temp2}}"
            arrow="right" __fn_onClick="{{true}}" data-e-handleItemClick-so="this"></at-list-item>
        </at-list>
        <view class="submit-order_white-space"></view>
        <view class="submit-order_product">
            <view class="submit-order_product-content">
                <view>
                    <view class="submit-order_product-content-img">
                        <image style="height:100px;width:100px;margin:0 auto;padding-left:10px;padding-top:5px;"
                        __triggerObserer="{{ _triggerObserer }}" mode="scaleToFill" src="{{imgUrl}}"
                        />
                    </view>
                </view>
                <view>
                    <view class="submit-order_product-content-product">
                        <view>{{activityName}}</view>
                        <view>{{product.name}}</view>
                        <view>￥{{product.price}}</view>
                    </view>
                </view>
            </view>
            <view class="submit-order_product-appoint">
                <picker class="submit-order_product-appoint-picker" mode="date" bindchange="onDateChange">
                    <view class="item-extra__icon item-extra__icon">预约时间: {{appointmentDate}}
                        <text class="at-icon at-icon item-extra__icon-arrow item-extra__icon-arrow at-icon-chevron-right at-icon-chevron-right submit-appointer"></text>
                    </view>
                </picker>
            </view>
        </view>
        <view class="submit-order_footer">
            <view>共
                <text style="color:red">( 1 )</text>件 预定金:
                <text style="color:red">￥{{product.advance}}</text>
            </view>
            <view bindtap="handleSubmitOrder" data-e-handleSubmitOrder-so="this">提交订单</view>
        </view>
    </view>
</block>