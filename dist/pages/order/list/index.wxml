<block wx:if="{{$taroCompReady}}">
    <view>
        <block>
            <block wx:if="{{OrderList.length > 0}}">
                <view class="mp-order-list" wx:for="{{loopArray16}}" wx:for-item="item" wx:for-index="_anonIdx2">
                    <title compid="{{item.$compid__56}}"></title>
                    <view class="product">
                        <view class="left">
                            <image style="height:100%;width:100%;margin:0 auto;padding:5px;" mode="scaleToFill" src="{{item.$original.imgUrl}}"></image>
                        </view>
                        <view class="right">
                            <view>{{item.$original.activityName}}</view>
                            <view>{{item.$original.activityProductName}}</view>
                            <view>{{item.$original.productDiscountPrice}}</view>
                        </view>
                    </view>
                    <view class="order-action">
                        <view class="action">
                            <block wx:if="{{item.$original.status == 'UNPAY'}}">
                                <at-button compid="{{item.$compid__57}}">支付订单</at-button>
                            </block>
                            <block wx:if="{{item.$original.status == 'PAID'}}">
                                <view>
                                    <at-button compid="{{item.$compid__58}}">我要评价</at-button>
                                </view>
                            </block>
                            <block wx:if="{{item.$original.status == 'COMMENTING'}}">
                                <view>
                                    <at-button compid="{{item.$compid__59}}">我要评价</at-button>
                                </view>
                            </block>
                            <block wx:if="{{item.$original.status == 'CONSUMPTION'}}">
                                <view>
                                    <at-button compid="{{item.$compid__60}}">重新购买</at-button>
                                </view>
                            </block>
                        </view><text></text> 
                    </view>
                </view>
            </block>
            <block wx:else>
                <view class="mp-empty-blank-icon">
                    <view class="mp-order__empty">
                        <image class="mp-empty-blank-image" src="{{empty}}"></image>
                        <view class="mp-empty-blank-text">暂无订单数据</view>
                    </view>
                </view>
            </block>
        </block>
    </view>
</block>