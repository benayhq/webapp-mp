<block>
    <view class="mp-advert">
        <image class="share-image" src="{{shareImage}}" mode="widthFix" lazy-load="{{true}}"></image>
        <block wx:if="{{canvasStatus}}">
            <taro-canvas-drawer config="{{config}}" __triggerObserer="{{ _triggerObserer }}" bindoncreatesuccess="onCreateSuccess" bindoncreatefail="onCreateFail" __fn_onCreateSuccess="{{true}}" __fn_onCreateFail="{{true}}"></taro-canvas-drawer>
        </block>
        <view class="thumbnail-wrapper">
            <view class="thumbnail">
                <view bindtap="canvasDrawFunc" wx:for="{{imgList}}" wx:for-item="item" wx:for-index="index" data-e-tap-so="this" data-e-tap-a-a="{{rssConfig}}">
                    <image wx:key="index" __triggerObserer="{{ _triggerObserer }}" src="{{item.url}}"></image>
                    <block wx:if="{{item.isShow}}">
                        <view class="mask"><text class="mp-icon mp-icon-checkeditem"></text>
                        </view>
                    </block>
                </view>
            </view>
        </view>
    </view>
</block>