<block>
    <view class="mp-advert">
        <image class="shareImage" src="{{shareImage}}" mode="widthFix" lazy-load="{{true}}"
        />
        <block wx:if="{{canvasStatus}}">
            <taro-canvas-drawer config="{{bannerConfig}}" __triggerObserer="{{ _triggerObserer }}"
            bindoncreatesuccess="onCreateSuccess" bindoncreatefail="onCreateFail" __fn_onCreateSuccess="{{true}}"
            __fn_onCreateFail="{{true}}"></taro-canvas-drawer>
        </block>
        <view class="thumbnail-wrapper">
            <view class="thumbnail">
                <view bindtap="canvasDrawFunc" wx:for="{{imgList}}" wx:for-item="item"
                wx:for-index="index" data-e-canvasDrawFunc-so="this" data-e-canvasDrawFunc-a-a="{{item.id}}">
                    <image wx:key="{{index}}" __triggerObserer="{{ _triggerObserer }}" src="{{item.url}}"
                    />
                    <block wx:if="{{item.isShow}}">
                        <view class="mask">
                            <text class="mp-icon mp-icon-checkeditem"></text>
                        </view>
                    </block>
                </view>
            </view>
        </view>
        <view class="image-save" bindtap="saveToAlbum">保存至相册</view>
    </view>
</block>