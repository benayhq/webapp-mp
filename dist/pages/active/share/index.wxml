<block>
    <view class="mp-advert">
        <block wx:if="{{advertIndex === 0}}">
            <advert data="{{data}}" __triggerObserer="{{ _triggerObserer }}" qrCode="{{qrCode}}"></advert>
        </block>
        <block wx:if="{{advertIndex === 1}}">
            <advert-01 data="{{data}}" __triggerObserer="{{ _triggerObserer }}" qrCode="{{qrCode}}"></advert-01>
        </block>
        <block wx:if="{{advertIndex === 2}}">
            <advert-02 data="{{data}}" __triggerObserer="{{ _triggerObserer }}" qrCode="{{qrCode}}"></advert-02>
        </block>
        <view class="thumbnail-wrapper">
            <view class="thumbnail">
                <view bindtap="handleChangeAdvert" wx:for="{{imgList}}" wx:for-item="item" wx:for-index="index" data-e-tap-so="this" data-e-tap-a-a="{{item}}" data-e-tap-a-b="{{index}}">
                    <image wx:key="index" __triggerObserer="{{ _triggerObserer }}" src="{{item.url}}"></image>
                    <block wx:if="{{item.isShow}}">
                        <view class="mask"><text class="mp-icon mp-icon-checkeditem"></text>
                        </view>
                    </block>
                </view>
            </view>
        </view>
    </view>
</block>