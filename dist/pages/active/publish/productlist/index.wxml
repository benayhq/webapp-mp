<block>
    <view class="product">
        <block wx:if="{{products != null}}">
            <view class="list" wx:for="{{products}}" wx:for-item="item">
                <view class="list-top">
                    <view></view>
                    <view>
                        <image style="width:86px; height:86px;margin-top:14px;border-radius:9px;"
                        __triggerObserer="{{ _triggerObserer }}" mode="scaleToFill" src="{{item.location}}"
                        />
                    </view>
                    <view>
                        <view class="product-item margin20">{{item.name}}</view>
                        <view class="product-item font">{{item.price}}</view>
                        <view class="product-item textfont">预定金:
                            <text class="amount">{{item.advance}}</text>
                        </view>
                        <view class="product-item textfont">活动价:
                            <text class="amount">{{item.discountPrice}}</text>
                        </view>
                    </view>
                </view>
            </view>
        </block>
    </view>
</block>