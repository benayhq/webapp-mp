<block>
    <view>
        <view class="publish-item"><text>活动产品</text><text bindtap="selectProduct">选择我的产品</text>
        </view>
        <view>
            <view class="product">
                <view class="list" wx:for="{{products}}" wx:for-item="item" wx:for-index="_anonIdx">
                    <view class="list-top">
                        <view></view>
                        <view>
                            <image style="width:92px; height:95px;margin-top:14px;" __triggerObserer="{{ _triggerObserer }}" mode="scaleToFill" src="{{item.location}}"></image>
                        </view>
                        <view>
                            <view class="product-item margin20">{{item.name}}</view>
                            <view class="product-item font">{{item.price}}</view>
                            <view class="product-item textfont">预定金: <text class="amount">{{item.advance}}</text>
                            </view>
                        </view>
                    </view>
                    <view class="product-item activePrice">
                        <view>活动价:</view>
                        <view>
                            <at-input name="value" __triggerObserer="{{ _triggerObserer }}" type="text" value="{{item.discountPrice}}" bindonchange="handleChange" __fn_onChange="{{true}}" data-e-onchange-so="this"></at-input>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
</block>