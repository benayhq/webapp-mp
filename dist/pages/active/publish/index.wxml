<block>
    <view class="mp-active">
        <scroll-view scroll-y="{{true}}" style="{{anonymousState__temp}}">
            <at-message __triggerObserer="{{ _triggerObserer }}"></at-message>
            <view class="item" style="border:none;">
                <text>活动名称</text>
                <at-input border="{{false}}" __triggerObserer="{{ _triggerObserer }}"
                value="{{activeName}}" bindonchange="handleActiveChange" placeholder="请输入活动名称"
                __fn_onChange="{{true}}" data-e-handleActiveChange-so="this"></at-input>
            </view>
            <view class="item">
                <picker range="{{groupItem}}" bindchange="handlePickerSelectGroupChange">
                    <view class="picker">
                        <text>成团人数</text>
                        <text class="time-tuan">{{groupItemChecked}}</text>
                        <text class="at-icon at-icon-chevron-right group-count"></text>
                    </view>
                </picker>
            </view>
            <view class="item">
                <picker mode="date" bindchange="onDateStartChange">
                    <view class="picker">
                        <text>开始时间</text>
                        <text class="time">{{dateStart}}</text>
                        <text class="at-icon at-icon-chevron-right group-count"></text>
                    </view>
                </picker>
            </view>
            <view class="item" style="border:none;">
                <picker mode="date" bindchange="onDateEndChange">
                    <view class="picker">
                        <text>结束时间</text>
                        <text class="time">{{dateEnd}}</text>
                        <text class="at-icon at-icon-chevron-right group-count"></text>
                    </view>
                </picker>
            </view>
            <view class="item">
                <text>活动地点</text>
                <text class="time"></text>
                <region bindongetregion="onGetRegion" __triggerObserer="{{ _triggerObserer }}"
                __fn_onGetRegion="{{true}}" data-e-onGetRegion-so="this"></region>
                <text class="at-icon at-icon-chevron-right group-address"></text>
            </view>
            <view class="mp-publish-product">
                <view class="publish-item">
                    <text>活动图片</text>
                </view>
                <at-image-picker multiple="{{true}}" __triggerObserer="{{ _triggerObserer }}"
                className="uploadImage" files="{{files}}" bindonchange="HandlePickerChange"
                __fn_onChange="{{true}}" data-e-HandlePickerChange-so="this"></at-image-picker>
            </view>
            <view class="mp-publish-product">
                <view class="publish-item">
                    <text>活动产品</text>
                    <text bindtap="selectProduct">选择我的产品</text>
                </view>
                <view class="pulbish-create" bindtap="createProduct">
                    <text class="mp-icon mp-icon-plus"></text>
                    <text>新增产品</text>
                </view>
                <product-list products="{{products}}" __triggerObserer="{{ _triggerObserer }}"></product-list>
            </view>
        </scroll-view>
        <view class="publish">
            <block>
                <block wx:if="{{isShowPublic}}">
                    <view bindtap="onPublish">立即发布</view>
                </block>
                <block wx:else>
                    <button class="getPhone" form-type="submit" open-type="getPhoneNumber"
                    bindgetphonenumber="getPhoneNumber" data-e-getPhoneNumber-so="this">立即发布</button>
                </block>
            </block>
        </view>
    </view>
</block>