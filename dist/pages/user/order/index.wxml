<block>
    <view class="mp-user__order">
        <view class="mp-user__order-title">
            <text>客户订单</text>
            <text class="mp-user__order-queryall" bindtap="jumpUrl" data-e-jumpUrl-so="this"
            data-e-jumpUrl-a-a="/pages/order/index?status=&index=0">查看全部订单</text>
        </view>
        <view class="mp-user__ordernav">
            <block wx:if="{{list && list != undefined}}">
                <view class="mp-user__ordernav-tuan" bindtap="jumpUrl" wx:for="{{list}}"
                wx:for-item="item" wx:for-index="index" data-e-jumpUrl-so="this" data-e-jumpUrl-a-a="{{anonymousState__temp}}">
                    <block>
                        <block wx:if="{{item.count > 0}}">
                            <at-badge value="{{item.count}}" __triggerObserer="{{ _triggerObserer }}"
                            maxValue="{{99}}">
                                <view class="{{item.icon}}"></view>
                            </at-badge>
                        </block>
                        <block wx:else>
                            <view class="{{item.icon}}"></view>
                        </block>
                    </block>
                    <view class="mp-user__ordernav-text">{{item.text}}</view>
                </view>
            </block>
        </view>
    </view>
</block>