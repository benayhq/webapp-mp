<block>
    <view>
        <scroll-view scroll-y="{{true}}" bindscrolltolower="loadMore" style="{{anonymousState__temp}}">
            <block>
                <block wx:if="{{!pageLoaded}}">
                    <loading __triggerObserer="{{ _triggerObserer }}"></loading>
                </block>
                <block wx:elif="{{activeList.length > 0}}">
                    <view>
                        <block wx:if="{{activeList}}">
                            <active-item handleCloseActive="handleCloseActive" __triggerObserer="{{ _triggerObserer }}"
                            item="{{item}}" wx:for="{{activeList}}" wx:for-item="item" data-e-handleCloseActive-so="this"></active-item>
                        </block>
                    </view>
                </block>
                <view wx:else>
                    <empty __triggerObserer="{{ _triggerObserer }}"></empty>
                </view>
            </block>
            <block wx:if="{{pageLoaded && loading}}">
                <view class="home__loading">
                    <text class="home__loading-txt">正在加载中...</text>
                </view>
            </block>
            <block wx:if="{{!hasMore}}">
                <view class="home__loading home__loading--not-more">
                    <text class="home__loading-txt">没有更多了</text>
                </view>
            </block>
        </scroll-view>
    </view>
</block>