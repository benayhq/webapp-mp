<block>
    <view class="mp-user__info">
        <view class="mp-user__info-avatar"><text class="mp-icon mp-icon-avatar"></text>
        </view>
        <view class="mp-user__info-message">
            <view class="mp-user__user-username">{{user.userName}}</view>
            <view class="mp-user__user-level">{{user.level}}</view>
            <view class="mp-user__user-level-up">{{user.levelText}}</view>
        </view>
        <block wx:if="{{user.amount}}">
            <view class="mp-user__info-money">
                <view class="mp-user__money-amount">{{user.amount}}</view>
                <view class="mp-user__money-order">已结定金</view>
            </view>
        </block>
        <button class="mp-user__update" open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="onGetUserInfo" type="primary">更新资料</button>
    </view>
</block>