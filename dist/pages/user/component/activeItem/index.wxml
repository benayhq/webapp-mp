<block>
    <view class="list-wrapper" bindtap="HandleActiveClick" data-e-HandleActiveClick-so="this"
    data-e-HandleActiveClick-a-a="{{item}}">
        <view class="list-wrapper-header">
            <view>{{item.name}}</view>
            <view style="{{anonymousState__temp}}">{{item.status === "NORMAL" ? "活动中" : "已结束"}}</view>
        </view>
        <view class="list-wrapper-content">
            <view>
                <image className="icon-header" __triggerObserer="{{ _triggerObserer }}"
                src="{{item.url}}" />
            </view>
            <view>
                <view>{{item.name}}</view>
                <view>{{item.people}}人成团</view>
                <view>活动有效期: {{item.endD}}</view>
            </view>
        </view>
        <view class="list-wrapper-action">
            <block wx:if="{{item.status === 'NORMAL'}}">
                <view catchtap="HandleCloseActive" data-e-HandleCloseActive-so="this"
                data-e-HandleCloseActive-a-a="{{item}}">关闭活动</view>
            </block>
        </view>
    </view>
</block>