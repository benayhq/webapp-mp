.user-login__auth > button {
  background-color: transparent;
  margin: 0 auto;
  margin-bottom: 30rpx;
  width: 85%;
  height: 90rpx;
  line-height: 90rpx;
  border: 1rpx solid #7dd6d0; }
  .user-login__auth > button::after {
    border-radius: 0;
    width: initial;
    height: initial; }
  .user-login__auth > button:nth-child(1) {
    background: #7dd6d0;
    color: #ffffff; }
  .user-login__auth > button:nth-child(2) {
    color: #7dd6d0; }
